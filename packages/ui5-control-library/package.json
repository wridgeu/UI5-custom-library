{
  "name": "ui5-control-library",
  "version": "1.0.0",
  "private": true,
  "description": "UI5 Custom Library using UI5 WebComponents",
  "scripts": {
    "start": "yarn _build && ui5 serve -o test-resources/ui5lib/avatar/Avatar.html",
    "_build": "yarn run clean && yarn run rollup && ui5 build --config ui5-dev.yaml --verbose",
    "rollup": "rollup --config",
    "clean": "rimraf dist/resources/*",
    "watch": "npm-watch"
  },
  "watch": {
    "_build": {
      "patterns": [
        "src",
        "lib",
        "./rollup.config.js"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "keywords": [
    "custom-library",
    "controlllibrary",
    "ui5",
    "ui5-tooling"
  ],
  "author": "Marco Beier",
  "license": "ISC",
  "devDependencies": {
    "@ui5/webcomponents": "^1.2.4",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}
