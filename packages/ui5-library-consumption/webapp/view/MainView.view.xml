 <mvc:View controllerName="mrb.applibraryconsumption.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:ui5lib="ui5lib.avatar"
  xmlns:l="sap.ui.layout">
  <App id="idAppControl" >
    <pages>
      <Page id="page-main" titleAlignment="Center" title="{i18n>title}">
        <content>
          <l:BlockLayout id="layout-main">
              <l:BlockLayoutRow id="row-main">
                  <l:BlockLayoutCell id="cell-main" class="block-cell-align-content-center" width="100%" backgroundColorSet="ColorSet6" backgroundColorShade="ShadeD">
                      <ui5lib:Avatar id="custom-lib-control1" initials="AV" size="M"/> 
                      <!-- Technically the below two still work, theming is just missing (missing CSS classes) -->
                      <!-- These need to be imported, added to the bundling or manually created                -->
                      <ui5lib:Avatar id="custom-lib-control2" image="../resources/img/favicon.ico" size="M"/>
                      <ui5lib:Avatar id="custom-lib-control3" icon="employee" size="XL"/>
                  </l:BlockLayoutCell>
              </l:BlockLayoutRow>
            </l:BlockLayout>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>